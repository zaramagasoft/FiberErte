<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".fragments.FragmentReducc">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment" />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jornada %: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/editReduccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="100%"
                android:maxLines="1"
                android:background="@drawable/edit_borde"
                android:digits="1234567890."
                android:maxLength="5"
                android:inputType="numberSigned"
                android:imeOptions="actionDone">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50sp">

            <TextView
                android:gravity="center"
                android:id="@+id/textSepeRedu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad SEPE: "
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:id="@+id/textFiberRedu"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad Fiber: " />

            <TextView
                android:gravity="center"
                android:id="@+id/textTotalRedu"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: " />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>